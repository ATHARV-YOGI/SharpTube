{
  "manifest_version": 3,
  "name": "SharpTube",
  "version": "1.0",
  "description": "✂️ SharpTube — Cut the Distractions by hiding recommended videos, comments, shorts, homepage clutter, and more.",
  "permissions": [ "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
